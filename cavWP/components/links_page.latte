<!DOCTYPE html>
<html {language_attributes()}>
<head>
   {do_action('links_head')}
</head>
{var $links = wp_nav_menu([
   'menu'       => $menu,
   'container'  => 'nav',
   'menu_class' => 'flex flex-col gap-3',
   'item_class' => 'bg-black/90 shadow-md shadow-white/20 rounded-md text-center',
   'link_class' => 'block py-4 px-5',
   'echo'       => 0,
])}
<body class="text-zinc-100 text-lg overflow-x-hidden custom-background">
   <div class="w-screen min-h-screen backdrop-blur-sm bg-black/75">
      <div class="flex flex-col gap-8 justify-between max-w-md h-full pt-16 pb-6 px-4 mx-auto">
         <header class="flex flex-col gap-2 items-center">
            <div class="rounded-full overflow-hidden">{$avatar|noescape}</div>
            <h1 class="font-semibold text-2xl">{$name}</h1>
            <a href="{$site}" class="text-base">{$domain}</a>
            <p>{$description}</p>
         </header>
         <main class="grow">
            {$links|noescape}
         </main>
         <footer class="flex justify-center">
            <a href="{$site}" class="rounded-full py-2 px-4 bg-black/75 text-xs">{$home}</a>
         </footer>
      </div>
   </div>
</body>
</html>
